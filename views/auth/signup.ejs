<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="login-form" action="/signup" method="POST" novalidate>
            <% if (errorMessage) { %>
                <div style="text-align: center; color: red;"><%= errorMessage %></div>
            <% } %>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>" type="email" name="email" id="email" value="<%= oldInput.email%>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"  type="password" name="password" id="password" value="<%= oldInput.password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input class="<%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : '' %>"  type="password" name="confirmPassword" id="confirmPassword" value="<%= oldInput.confirmPassword %>">
            </div>
            <button class="btn" type="submit">SignUp</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>